<c:BaseConditionListContent xmlns="https://github.com/avaloniaui"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:c="clr-namespace:MemEngine360.BaseFrontEnd.TaskSequencing.Conditions"
                            mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="30"
                            x:Class="MemEngine360.BaseFrontEnd.TaskSequencing.Conditions.CompareMemoryConditionListContent">
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="Compare Value At" FontFamily="{StaticResource FontOxanium}" FontWeight="Medium" VerticalAlignment="Center" Padding="4,0"/>
        <TextBox x:Name="PART_AddressTextBox" VerticalContentAlignment="Center"
                 Padding="4,2" Width="105"
                 VerticalAlignment="Center"
                 ToolTip.Tip="The address to write at"
                 Background="{DynamicResource ABrush.Tone1.Background.Static}">
            <TextBox.InnerLeftContent>
                <TextBlock Text="0x" Opacity="0.7"/>
            </TextBox.InnerLeftContent>
        </TextBox>
        <StackPanel x:Name="PART_ToValueStackPanel" Orientation="Horizontal" VerticalAlignment="Center">
            <Border Background="{DynamicResource Button.Static.Border}" BorderBrush="{DynamicResource Button.Static.Border}" BorderThickness="1" Margin="2,0">
                <StackPanel Orientation="Horizontal" Spacing="1">
                    <ToggleButton x:Name="PART_CMP_EQ"   IsCheckedChanged="PART_CompareModeCheckChanged" BorderThickness="0" Width="22" ToolTip.Tip="Equal To"><TextBlock Text="==" Margin="0,-1,0,0"/></ToggleButton>
                    <ToggleButton x:Name="PART_CMP_NEQ"  IsCheckedChanged="PART_CompareModeCheckChanged" BorderThickness="0" Width="22" ToolTip.Tip="Not Equal To"><TextBlock Text="!=" Margin="0,-1,0,0"/></ToggleButton>
                    <ToggleButton x:Name="PART_CMP_LT"   IsCheckedChanged="PART_CompareModeCheckChanged" BorderThickness="0" Width="22" ToolTip.Tip="Less Than"><TextBlock Text="&lt;" Margin="0,-1,0,0"/></ToggleButton>
                    <ToggleButton x:Name="PART_CMP_LTEQ" IsCheckedChanged="PART_CompareModeCheckChanged" BorderThickness="0" Width="22" ToolTip.Tip="Less than or equal to"><TextBlock Text="&lt;=" Margin="0,-1,0,0"/></ToggleButton>
                    <ToggleButton x:Name="PART_CMP_GT"   IsCheckedChanged="PART_CompareModeCheckChanged" BorderThickness="0" Width="22" ToolTip.Tip="Greater than"><TextBlock Text="&gt;" Margin="0,-1,0,0"/></ToggleButton>
                    <ToggleButton x:Name="PART_CMP_GTEQ" IsCheckedChanged="PART_CompareModeCheckChanged" BorderThickness="0" Width="22" ToolTip.Tip="Greater than or equal to"><TextBlock Text="&gt;=" Margin="0,-1,0,0"/></ToggleButton>
                </StackPanel>
            </Border>
            <TextBox x:Name="PART_ValueTextBox" VerticalContentAlignment="Center"
                     Padding="4,2" MinWidth="150"
                     ToolTip.Tip="The value to write. Prefix with '0x' to write the integer as hex"
                     Background="{DynamicResource ABrush.Tone1.Background.Static}">
            </TextBox>
            <ComboBox x:Name="PART_DataTypeComboBox" Margin="3,0,0,0" Width="65"
                      VerticalContentAlignment="Center"
                      Background="{DynamicResource ABrush.Tone1.Background.Static}"/>
        </StackPanel>
    </StackPanel>
</c:BaseConditionListContent>