<local:BaseOperationControl xmlns="https://github.com/avaloniaui"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:local="clr-namespace:MemEngine360.BaseFrontEnd.TaskSequencing.OperationControls"
                            mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="48"
                            x:Class="MemEngine360.BaseFrontEnd.TaskSequencing.OperationControls.DelayOperationControl">
    <DockPanel>
        <Button Click="Button_RemoveClick" DockPanel.Dock="Right" Content="X" VerticalAlignment="Top" Width="20" Height="20" Background="Transparent" BorderThickness="0"/>
        <StackPanel Spacing="5" Orientation="Horizontal">
            <TextBlock Text="Delay for..." FontFamily="{StaticResource FontOxanium}" FontWeight="Medium" VerticalAlignment="Center"/>
            <TextBox x:Name="PART_DelayTextBox" VerticalContentAlignment="Center" Padding="4,2" HorizontalAlignment="Left" Width="100"
                     TextAlignment="Right">
                <TextBox.InnerRightContent>
                    <TextBlock Text="ms" Opacity="0.6"/>
                </TextBox.InnerRightContent>
            </TextBox>
        </StackPanel>
    </DockPanel>
</local:BaseOperationControl>