<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net8.0</TargetFramework>
        <Nullable>enable</Nullable>
        <BuiltInComInteropSupport>true</BuiltInComInteropSupport>
        <ApplicationManifest>app.manifest</ApplicationManifest>
        <AvaloniaUseCompiledBindingsByDefault>true</AvaloniaUseCompiledBindingsByDefault>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Avalonia" Version="11.3.0-beta1" />
        <PackageReference Include="Avalonia.Controls.DataGrid" Version="11.3.0-beta1" />
        <PackageReference Include="Avalonia.Desktop" Version="11.3.0-beta1"/>
        <PackageReference Include="Avalonia.Themes.Fluent" Version="11.3.0-beta1"/>
        <PackageReference Include="Avalonia.Fonts.Inter" Version="11.3.0-beta1"/>
        <!--Condition below is needed to remove Avalonia.Diagnostics package from build output in Release configuration.-->
        <PackageReference Include="Avalonia.Diagnostics" Version="11.3.0-beta1">
            <IncludeAssets Condition="'$(Configuration)' != 'Debug'">None</IncludeAssets>
            <PrivateAssets Condition="'$(Configuration)' != 'Debug'">All</PrivateAssets>
        </PackageReference>
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\..\..\VSProjsV3\PFXToolKitUI\PFXToolKitUI.Avalonia\PFXToolKitUI.Avalonia.csproj" />
      <ProjectReference Include="..\MemEngine360\MemEngine360.csproj" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="Keymap.xml" />
      <Content Include="Keymap.xml">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Content>
    </ItemGroup>
</Project>
